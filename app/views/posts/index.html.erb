<div class="title">
  <h2>All Posts - (<%= @posts.count %>)</h2>
  <h2><%= link_to "New Post", new_post_path %></h2>
</div>

<div class='container-post'>
  <% @posts.each do |t| %>
    <div class="card card-1">
      <div class="card__icon"><%= t.name %></div>
      <p class="card__exit"><i class="fas fa-times"></i></p>
      <h2 class="card__title"><%= t.description %></h2>
      <p class="card__apply">
        <a class="card__link" href="#">View Post <i class="fas fa-arrow-right"></i></a>
      </p>
    </div>
  <% end %>
</div>


<script>
  ScrollReveal().reveal('.card', { delay: 200 });
  ScrollReveal().reveal('.div1', { delay: 250 });
  ScrollReveal().reveal('.div2', { delay: 300 });
  ScrollReveal().reveal('.div3', { delay: 350 });
</script>
