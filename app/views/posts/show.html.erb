<div class="card-container">
  <div class="card-wrapper">
    <div class="card">
      <div class="name field">
        <%= @post.name %>
      </div>

      <div class="address field">
        <%= @post.address %>
      </div>

      <div class="description">
        <%= @post.description %>
      </div>

      <div class="pernight">
        <%= @post.price_per_night %>
      </div>

      <div class="guests">
        <%= @post.number_of_guests %>
      </div>

      <div class="buttons">
        <%= link_to "Back", posts_path, class: 'btn' %>
        <%= link_to "Edit", edit_post_path, class: 'btn' %>
        <%= link_to "New Post", new_post_path, class: 'btn' %>
        <%= link_to "Delete", post_path(@post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn'  %>
      </div>
    </div>
  </div>
</div>
