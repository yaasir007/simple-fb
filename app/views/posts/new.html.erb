<div class='form-container'>
  <div class="form">
    <div class="titlenew">Welcome</div>
    <div class="subtitle">Let's create your post!</div>

    <%= simple_form_for [@post], method: :post do |f| %>
    <div class="fields">
      <div class="input-container ic1">
        <%= f.input :name, label: false, class: 'input', error: 'Username is mandatory, please specify one' %>
        <div class="cut"></div>
        <label for="firstname" class="placeholder">Name</label>
      </div>

      <div class="input-container ic1">
        <%= f.input :address, label: false, class: 'input' %>
        <div class="cut"></div>
        <label for="lastname" class="placeholder">Address</label>
      </div>

      <div class="input-container ic1">
        <%= f.input :description, label: false, class: 'input' %>
        <div class="cut cut-short"></div>
        <label for="email" class="placeholder">Description</>
      </div>

      <div class="input-container ic1">
        <%= f.input :price_per_night, label: false, class: 'input text' %>
        <div class="cut cut-short"></div>
        <label for="email" class="placeholder">Price Per Night</>
      </div>

      <div class="input-container ic1">
        <%= f.input :number_of_guests, label: false, class: 'input text' %>
        <div class="cut cut-short"></div>
        <label for="email" class="placeholder">Number of Guests</>
      </div>

      <br>

      <a href='/'><button type="text" class="submit1">Back</button></a>
      <button type="text" class="submit">Submit</button>
    </div>
    <% end %>
  </div>
</div>
