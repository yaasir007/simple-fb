<div class="form">

  <%= simple_form_for [@post_new], method: :post do |f| %>
    <div>
      <%= f.input :name %>
    </div>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.button :submit, "Book Me" %>
  <% end %>

  <%= link_to  "Back to Hompage", posts_path %>

</div>
